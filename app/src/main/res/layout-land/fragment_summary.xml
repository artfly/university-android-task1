<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_marginTop="15dp"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="0.3"
                  style="@style/SummaryTitle"
                  android:text="@string/hint_name"/>
        <TextView android:layout_height="wrap_content" android:layout_width="0dp"
                  android:layout_weight="0.7" android:gravity="center"
                  android:id="@+id/summary_name"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="0.3"
                  style="@style/SummaryTitle"
                  android:text="@string/hint_surname"/>
        <TextView android:layout_height="wrap_content" android:layout_width="0dp"
                  android:layout_weight="0.7" android:gravity="center"
                  android:id="@+id/summary_surname"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="0.3"
                  style="@style/SummaryTitle"
                  android:text="@string/hint_age"/>
        <TextView android:layout_height="wrap_content" android:layout_width="0dp"
                  android:layout_weight="0.7" android:gravity="center"
                  android:id="@+id/summary_age"/>
    </LinearLayout>

</LinearLayout>