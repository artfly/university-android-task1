<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_margin="@dimen/summary_fragment_land_default_margin">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView android:layout_width="@dimen/zero_size"
                      android:layout_height="wrap_content"
                      android:layout_weight="0.3"
                      style="@style/SummaryTitle"
                      android:text="@string/hint_name"/>
            <TextView android:id="@+id/summary_name"
                      android:layout_width="@dimen/zero_size"
                      android:layout_height="wrap_content"
                      android:layout_weight="0.7"
                      style="@style/LandSummaryValue"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView android:layout_width="@dimen/zero_size"
                      android:layout_height="wrap_content"
                      android:layout_weight="0.3"
                      style="@style/SummaryTitle"
                      android:text="@string/hint_surname"/>
            <TextView android:id="@+id/summary_surname"
                      android:layout_width="@dimen/zero_size"
                      android:layout_height="wrap_content"
                      android:layout_weight="0.7"
                      style="@style/LandSummaryValue"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView android:layout_width="@dimen/zero_size"
                      android:layout_height="wrap_content"
                      android:layout_weight="0.3"
                      style="@style/SummaryTitle"
                      android:text="@string/hint_age"/>
            <TextView android:id="@+id/summary_age"
                      android:layout_width="@dimen/zero_size"
                      android:layout_height="wrap_content"
                      android:layout_weight="0.7"
                      style="@style/LandSummaryValue"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>